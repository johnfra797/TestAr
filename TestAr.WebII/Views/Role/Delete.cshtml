@model Int32

@{
    ViewBag.Title = "Eliminar Role";
}

<h2>Eliminar Role</h2>
<div>
    <h4>Role</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            IdRole
        </dt>

        <dd>
            <label id="IdRole"></label>
        </dd>

        <dt>
            Nombre
        </dt>
        <dd>
            <label id="Nombre"></label>
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" id="delete" /> |
            @Html.ActionLink("Volver", "Index")
        </div>
    }
</div>
@section scripts
{
    <script>
            $(document).ready(function () {
                let api_url = 'http://localhost:62040/';
                var id = @Html.Raw(Json.Encode(Model));
                $("#delete").click(function () {
                    $.ajax({
                        url: `${api_url}api/Role/${id}`,
                        type: 'DELETE'
                    });
                });


        $.get(`${api_url}api/Role/${id}`, function (data) {
                    var tmpData = JSON.parse(data);
                    $("#IdRole").text(tmpData.IdRole);
                    $("#Nombre").text(tmpData.Nombre);

                })
            });


    </script>
}