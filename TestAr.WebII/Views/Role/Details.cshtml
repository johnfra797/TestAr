@model Int32

@{
    ViewBag.Title = "Detalle Role";
}

<h2>Detalle</h2>

<div>
    <h4>Role</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            IdRole
        </dt>

        <dd>
            <label id="IdRole"></label>
        </dd>

        <dt>
            Nombre
        </dt>

        <dd>
            <label id="Nombre"></label>
        </dd>


    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model }) |
    @Html.ActionLink("Volver", "Index")
</p>
@section scripts
{
    <script>
        $(document).ready(function () {
            let api_url = 'http://localhost:62040/';
            var id = @Html.Raw(Json.Encode(Model));
            $.get(`${api_url}api/Role/${id}`, function (data) {
                var tmpData = JSON.parse(data);
                $("#IdRole").text(tmpData.IdRole);
                $("#Nombre").text(tmpData.Nombre);

            })
        });


    </script>
}