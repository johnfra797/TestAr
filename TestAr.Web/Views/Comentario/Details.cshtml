@model Int32
@{
    ViewBag.Title = "Detalle Comentario";
}
<h2>Detalle</h2>
<div>
    <h4>Comentario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            IdComentario
        </dt>
        <dd>
            <label id="IdComentario"></label>
        </dd>
        <dt>
            Comentario
        </dt>
        <dd>
            <label id="Comentario"></label>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model }) |
    @Html.ActionLink("Volver", "Index")
</p>
@section scripts
{
    <script>
        $(document).ready(function () {
            let api_url = 'http://localhost:62040/';
            var id = @Html.Raw(Json.Encode(Model));
            $.get(`${api_url}api/Comentario/${id}`, function (data) {
                var tmpData = JSON.parse(data);
                $("#IdComentario").text(tmpData.IdComentario);
                $("#Comentario").text(tmpData.Comentario);

            })
        });


    </script>
}